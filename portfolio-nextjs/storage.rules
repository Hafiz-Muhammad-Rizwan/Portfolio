rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Portfolio images folder
    match /portfolio/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
